<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"  android:layout_marginTop="40dp"  android:padding="24dp"
    tools:context=".AddUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/agbalumo"
            android:paddingBottom="4dp"
            android:text="User Management"  android:textColor="#4CAF50"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register New User Account"  android:textSize="16sp"
            android:textColor="#666666"
            android:fontFamily="sans-serif"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_green_border"
            android:fontFamily="@font/abhaya_libre"
            android:hint="NAME"
            android:inputType="textPersonName"
            android:padding="14dp"
            android:textColor="#000000"
            android:textColorHint="#999999" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="EMAIL"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_green_border"
            android:padding="14dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:fontFamily="@font/abhaya_libre"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:background="@drawable/edittext_green_border"
            android:padding="14dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:fontFamily="@font/abhaya_libre"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:id="@+id/radioGroupUserType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CUSTOMER"
                android:textColor="#000000"
                android:fontFamily="sans-serif" />

            <RadioButton
                android:id="@+id/radioFarmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FARMER"
                android:textColor="#000000"
                android:checked="true"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif" />

        </RadioGroup>

        <EditText
            android:id="@+id/editTextFarmerID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="FARMER ID"
            android:inputType="text"
            android:background="@drawable/edittext_green_border"
            android:padding="14dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:fontFamily="@font/abhaya_libre"
            android:layout_marginBottom="24dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonAddUser"  android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD USER"  android:textColor="#FFFFFF"
            android:background="@drawable/button_green"
            android:padding="14dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:elevation="4dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>