<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Scrollable content above footer -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerMessage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top bar: full green with profile + settings icons -->
            <LinearLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#4CAF50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/iconProfile"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_profile"
                    android:contentDescription="Profile"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/farmerGreeting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hello, Hafiz"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:paddingStart="12dp" />

                <ImageView
                    android:id="@+id/iconSettings"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_settings"
                    android:contentDescription="Settings"
                    app:tint="#FFFFFF" />
            </LinearLayout>

            <!-- Page padding below top bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Search bar: green border + light green fill, proper icon size -->
                <LinearLayout
                    android:id="@+id/searchContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edittext_green_border"
                    android:padding="6dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/searchFarm"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:hint="Search your farm"
                        android:background="@drawable/search_bar_fill"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/searchIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_search"
                        android:contentDescription="Search"
                        app:tint="#4CAF50" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/farmOverviewCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:background="@drawable/card_background_green">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Title row: icon + text side by side -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingBottom="8dp">

                            <ImageView
                                android:id="@+id/farmIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_farm"
                                android:contentDescription="Farm icon"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/overviewTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Farm Overview"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <!-- Last survey row -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingBottom="4dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_calendar"
                                android:contentDescription="Calendar"
                                android:layout_marginEnd="6dp" />

                            <TextView
                                android:id="@+id/lastSurvey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Last survey submitted: 9/10/2025"
                                android:textSize="14sp"
                                android:textColor="#333333" />
                        </LinearLayout>

                        <!-- Yield row -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_weight"
                                android:contentDescription="Yield"
                                android:layout_marginEnd="6dp" />

                            <TextView
                                android:id="@+id/totalYield"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total yield this month: 20 kg"
                                android:textSize="14sp"
                                android:textColor="#333333" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <!-- PineConnect Portal title -->
                <TextView
                    android:id="@+id/portalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="PineConnect Portal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <!-- Portal section with gradient background and 4 cards titled -->
                <LinearLayout
                    android:id="@+id/portalSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/portal_gradient"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2">

                        <!-- Submit New Survey -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/submitSurvey"
                            android:layout_width="0dp"
                            android:layout_height="140dp"
                            android:layout_margin="8dp"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_survey"
                                    android:contentDescription="Submit New Survey" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Submit New Survey"
                                    android:textSize="14sp"
                                    android:textColor="#000000"
                                    android:paddingTop="8dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- View Past Surveys -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/viewSurveys"
                            android:layout_width="0dp"
                            android:layout_height="140dp"
                            android:layout_margin="8dp"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_history"
                                    app:tint="#4CAF50"
                                    android:contentDescription="View Past Surveys" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View Past Surveys"
                                    android:textSize="14sp"
                                    android:textColor="#000000"
                                    android:paddingTop="8dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Pineapple News & Tips -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/newsTips"
                            android:layout_width="0dp"
                            android:layout_height="140dp"
                            android:layout_margin="8dp"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_news"
                                    android:contentDescription="Pineapple News and Tips" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pineapple News and Tips"
                                    android:textSize="14sp"
                                    android:textColor="#000000"
                                    android:paddingTop="8dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Ask for Help -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/askHelp"
                            android:layout_width="0dp"
                            android:layout_height="140dp"
                            android:layout_margin="8dp"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_help"
                                    android:contentDescription="Ask for Help" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ask for Help"
                                    android:textSize="14sp"
                                    android:textColor="#000000"
                                    android:paddingTop="8dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </GridLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Footer pinned to bottom -->
    <TextView
        android:id="@+id/footerMessage"
        android:layout_width="match_parent"
