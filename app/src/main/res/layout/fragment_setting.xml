<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Rate App -->
        <TextView
            android:id="@+id/optionRateApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rate_app"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_star"
            android:drawablePadding="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center_vertical"
            android:contentDescription="@string/rate_app"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDD"/>

        <!-- Share App -->
        <TextView
            android:id="@+id/optionShareApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share_app"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_share"
            android:drawablePadding="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center_vertical"
            android:contentDescription="@string/share_app"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDD"/>

        <!-- Privacy Policy -->
        <TextView
            android:id="@+id/optionPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_policy"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center_vertical"
            android:contentDescription="@string/privacy_policy"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDD"/>

        <!-- Terms and Conditions -->
        <TextView
            android:id="@+id/optionTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terms_conditions"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_document"
            android:drawablePadding="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center_vertical"
            android:contentDescription="@string/terms_conditions"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDD"/>

        <!-- Feedback -->
        <TextView
            android:id="@+id/optionFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/feedback"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_feedback"
            android:drawablePadding="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center_vertical"
            android:contentDescription="@string/feedback"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDD"/>

        <!-- Logout -->
        <TextView
            android:id="@+id/optionLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_dark"
            android:drawableStart="@drawable/ic_logout"
            android:drawablePadding="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center_vertical"
            android:contentDescription="@string/logout"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDD"/>
    </LinearLayout>
</ScrollView>
