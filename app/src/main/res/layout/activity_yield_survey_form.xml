<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".YieldSurveyFormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50"  android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginTop="40dp" android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Monthly Yield Data Input"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harvest Date"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/inputHarvestDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tap to select date (e.g., 2024-10-31)"
            android:inputType="date"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Harvest Amount (kg)"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/inputYieldAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter total harvested weight (e.g., 500.5)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnSubmitYield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Yield Report"
            android:layout_marginTop="32dp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</LinearLayout>